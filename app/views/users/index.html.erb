
<div class="columns is-centered mt-5">
    <div class="block column is-two-fifths">
      <% @users.each do |user| %>
      <div class="card mt-5">
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4"><%= user.name %></p>
                <p class="subtitle is-6"> <%= user.email %> </p>
              </div>
            </div>
          </div>
          <footer class="card-footer">
          <% if current_user.friend_with?(user) %>
            <p class="card-footer-item"> Friend </p>
            <% elsif current_user.invitation_sent(user).empty? %>
            <%= link_to "Add Friend", invite_path(user), method: :get , class: "card-footer-item" %>
            <% else %>
            <%= link_to "Cancel Request", delete_request_path(user.id), method: :delete, data: {confirm: "Are you sure?"}, class: "card-footer-item" %> 
            <% end %>
            <a href="#" class="card-footer-item">View Profile</a>
          </footer>
        </div>
      <% end %>
   </div>
</div>